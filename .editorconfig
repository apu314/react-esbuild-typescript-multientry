root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 2
indent_style = space
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
qoute_style = single
bracket_same_line = false

[*.md]
trim_trailing_whitespace = false

[*.js, *.jsx, *.ts, *.tsx]
indent_size = 2
indent_style = space
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
qoute_style = single
bracket_same_line = false
semi = false
